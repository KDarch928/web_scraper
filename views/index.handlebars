                        <div>
                            {{#if comment}}
                            <p class="card-text">
                                {{comment.comment}}
                            </p>
                            {{/if}}
                        </div>
                        <br>
                    </div>


                </div>

            </div>
            {{/each}}
        </div>
    </div>
