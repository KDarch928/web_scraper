<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <div class="jumbotron jumbotron-fluid">
                <div class="container text-center">
                    <h1 class="display-4">Mongo Scraper</h1>
                    <p class="lead">IT World</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            {{#each articles}}
            <div class="card">
                <div class="card-body">
                    <a href="{{url}}">
                        <h5 class="card-title">{{title}}</h5>
                    </a>
                    <p class="card-text">
                        {{summary}}
                    </p>

                    <div id="comment">
                        <textarea id="{{_id}}" name="comment"></textarea>
                        <br>
                        <button data-id="{{_id}}" class="btn btn-info" id="savecomment">Submit Comment</button>
                        <br>
                        <form action="/articles/{{_id}}" method="GET">
                            <button type="submit" class="btn btn-info">View Comments</button>
                        </form>
                        <br>
                    </div>


                </div>

            </div>
            {{/each}}
        </div>
    </div>
</div>